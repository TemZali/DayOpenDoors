<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayOpenDoors.CheckPage"
             Title="Добро пожаловать!">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Image Source="Trench.png" HeightRequest="200" WidthRequest="200"/>
            <Entry x:Name="NameEntry" Placeholder="Введите имя" HorizontalOptions="FillAndExpand"/>
            <Picker Title="Выберите ваш статус" x:Name="StatusPicker" HorizontalOptions="FillAndExpand">
                <Picker.Items>
                    <x:String>Абитуриент</x:String>
                    <x:String>Родственник абитуриента</x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Создать учетную запись" Clicked="CreateNew" BackgroundColor="White" TextColor="Blue"
                    BorderColor="Blue" BorderRadius="10" BorderWidth="2"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>