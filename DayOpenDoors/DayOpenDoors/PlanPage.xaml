<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayOpenDoors.PlanPage"
             Title="Мероприятия">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="TypeButton" Clicked="ShowEvents" Text="Выберите тип мероприятия"/>
            <ListView x:Name="EventListView"
            HasUnevenRows="True"
            ItemTapped="Info_Click">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Frame CornerRadius="10" Padding="0" Margin="0">
                                    <StackLayout Orientation="Horizontal" Padding="0">
                                        <StackLayout VerticalOptions="FillAndExpand">
                                            <Label Text="{Binding StartTime}"/>
                                            <Label Text="{Binding EndTime}" VerticalOptions="EndAndExpand"/>
                                        </StackLayout>
                                        <BoxView BackgroundColor="{Binding EventColor}" WidthRequest="5" CornerRadius="10"/>
                                        <StackLayout Padding="0">
                                            <Label Text="{Binding Name}" LineBreakMode="WordWrap" TextColor="Blue"/>
                                            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                                <Label Text="{Binding Type}" TextColor="Orange" HorizontalOptions="StartAndExpand"/>
                                                <Label Text="{Binding Status}" TextColor="{Binding EventColor}"  HorizontalOptions="EndAndExpand"/>
                                            </StackLayout>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>